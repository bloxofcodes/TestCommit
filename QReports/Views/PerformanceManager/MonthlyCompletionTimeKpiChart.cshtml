
@{
    ViewBag.Title = "MonthlyCompletionTimeKpiChart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Monthly Completion Time KPI</h1>

<div class="row">
    <div class="col-sm-6">
        <h4>Period :    Sep 2018 - Oct 2018</h4>
        <h4>Asset Group : All</h4>
    </div>

    <div class="col-sm-6">
        <h4>Target : 94%</h4>
        <h4>WO type : CM</h4>
    </div>
</div>
<br />
<br />

<!-- HTML -->
<div>
    <canvas id="canvas"></canvas>
</div>

<br />
<br />
<br />
<div class="row">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>

                <th></th>
                <th>Sep 18</th>
                <th>Oct 18</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Target Expected</td>
                <td>94.00%</td>
                <td>94.00%</td>

            </tr>
            <tr>

                <td>Target Achieved</td>
                <td>96.53%</td>
                <td>95.82%</td>
            </tr>
            <tr>

                <td> < 10mins </td>
                <td>88.11%</td>
                <td>87.34%</td>
            </tr>
            <tr>

                <td> 10 mins - 15 mins </td>
                <td>88.11%</td>
                <td>87.34%</td>
            </tr>
            <tr>

                <td> 15 mins - 20 mins </td>
                <td>88.11%</td>
                <td>87.34%</td>
            </tr>
            <tr>

                <td> Others </td>
                <td>88.11%</td>
                <td>87.34%</td>
            </tr>
        </tbody>
    </table>
</div>


@section Scripts
{

    <!-- Resources -->
    <script src="https://www.chartjs.org/dist/2.7.3/Chart.bundle.js"></script>
    <script src="https://www.chartjs.org/samples/latest/utils.js"></script>




    <script>
        var config = {
            type: 'line',
            data: {
                labels: ['Sep 18', 'Oct 18'],
                datasets: [{
                    label: 'Target Expected',
                    fill: false,
                    backgroundColor: window.chartColors.blue,
                    borderColor: window.chartColors.blue,
                    data: [
                        94, 94
                    ],
                }, {
                    label: 'Target Achieved',
                    fill: false,
                    backgroundColor: window.chartColors.green,
                    borderColor: window.chartColors.green,
                    borderDash: [5, 5],
                    data: [
                        95,
                        95
                    ],
                }, {
                    label: '< 10 mins',
                    backgroundColor: window.chartColors.red,
                    borderColor: window.chartColors.red,
                    data: [
                        88.3,
                        90
                    ],
                    fill: false,
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Chart.js Line Chart'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Month'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Percentage'
                        },
                        ticks: {
                            beginAtZero: true,
                            steps: 10,
                            stepValue: 5,
                            max: 100
                        }
                    }]
                }
            }
        };

        window.onload = function () {
            var ctx = document.getElementById('canvas').getContext('2d');
            window.myLine = new Chart(ctx, config);
        };
    </script>
}