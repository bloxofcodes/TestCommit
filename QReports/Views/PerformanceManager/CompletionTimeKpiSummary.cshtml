@{
    ViewBag.Title = "CompletionTimeKpiSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*https://bootswatch.com/3/flatly/*@
<div class="container">
    <div class="page-wrapping">
        @*START BREADCRUMBS*@
        <ul class="breadcrumb">
            <li><a href="#">Reports</a></li>
            <li><a href="#">Performance Manager</a></li>
            <li class="active">Completion Time KPI Summary</li>
        </ul>
        @*END BREADCRUMBS*@
        <h3>Filters Criteria</h3>
        <h6>Report will be generated for Workorders that follow the filter criteria.</h6>
        <br />
        <br />

        <form action="~/Reports/CompletionTimeKPISummary/CompletionTimeKPISummary.aspx" class="form-horizontal" target="_blank">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-2">From</label>
                        <div class='input-group col-sm-10' id='datetimepicker1'>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            <input type='text' class="form-control" name="fromdatetime" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="asstgrp">Asset Group</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="asstgrp" name="asstgrp">
                                @foreach (string asset in ViewBag.Assets)
                                {
                                    <option value=@asset>@asset</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-3">To</label>
                        <div class='input-group col-sm-9' id='datetimepicker2'>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            <input type='text' class="form-control" name="todatetime" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" for="wotype">Work Order Type</label>
                        <div class="col-lg-9">
                            <select class="form-control" id="wotype" name="wotype">
                                @foreach (string wotype in ViewBag.WoTypes)
                                {
                                    <option value=@wotype>@wotype</option>
                                }

                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="pull-right">
                    <input type="submit" name="btngenreport" id="btngenreport" value="Generate Report" class="btn btn-warning" />
                    <input type="submit" name="btngenreport" id="btnreset" value="Reset" class="btn btn-warning" />
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script src="https://www.jqueryscript.net/demo/Clean-Data-Timepicker-with-jQuery-Bootstrap-3/build/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'DD/MM/YYYY hh:mm:ss A'
            });

            $('#datetimepicker2').datetimepicker({
                format: 'DD/MM/YYYY hh:mm:ss A'
            });
        });
    </script>
}